<h1>Welcome, <%= @user.to_s %></h1>

<table>
  <tr>
    <th>Choice Name</th>
    <th>Date</th>
  </tr>
<% @user.choices.each do |ch|%>
  <tr>
    <td><%=link_to ch.choice_name, ch %></td>
    <td><%=ch.date%></td>
  </tr>
<% end %>
</table>

<button><%=link_to "Create an event", new_choice_path %></button><br>
<button><%= link_to "Edit account", edit_user_path(@user) %></button>
<%= button_to "Delete account", user_path, method: :delete, data: { confirm: 'Are you sure about this?' } %>


