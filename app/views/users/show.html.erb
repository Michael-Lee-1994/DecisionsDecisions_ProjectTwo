<nav id="navbar" class="sidenav"> 
  <header> DECISIONS DECISIONS </header>
  <br>
  <ul>
    <button class="btn btn-dark" id="make_choice_btn"><%=link_to "Make a choice", new_choice_path %></button>
    <button class="btn btn-dark" id="edit_account_btn"><%= link_to "Edit account", edit_user_path(@user) %></button>
    <%= button_to "Delete account", user_path, method: :delete, data: { confirm: 'Are you sure about this?' }, class:"btn btn-dark", id:"delete_account"%>
  </ul>
</nav>

<div id="main">
  <h1 id="user_welcome_name">Welcome, <%= @user.to_s %></h1>
  <table class="table table-hover table-sm" id="user_show_table">
    <tr >
      <th scope="col">Choice Name</th>
      <th scope="col">Date</th>
    </tr>
    <% @user.choices.each do |ch|%>
      <tr>
      <td><%=link_to ch.choice_name, ch %></td>
      <td><%=ch.date%></td>
    </tr>
  <% end %>
  </table>
</div>
