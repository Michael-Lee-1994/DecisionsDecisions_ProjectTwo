<body>
<nav id="navbar" class="sidenav"> 
    <header> DECISIONS DECISIONS </header>
    <br>
    <ul>
      <button class="btn btn-dark"><%=link_to "Make a choice", new_choice_path %></button>
      <button class="btn btn-dark"><%= link_to "Edit account", edit_user_path(@user) %></button>
      <button class="btn btn-dark"><%= link_to "Add an Address", new_address_path %></button>
      <button class="btn btn-dark"><%= link_to "Edit an Address", edit_address_path(@user.address_id) %></button>
    </ul>
</nav>

<div id="main">
<h1 id="user_welcome_name">Welcome, <%= @user.to_s %></h1>

<table>
  <tr>
    <th>Choice Name</th>
    <th>Date</th>
  </tr>
<% @user.choices.each do |ch|%>
  <tr>
    <td><%=link_to ch.choice_name, ch %></td>
    <td><%=ch.date%></td>
  </tr>
<% end %>
</table>


<%= button_to "Delete account", user_path, method: :delete, data: { confirm: 'Are you sure about this?' } %>


