
<div class="form">
    <%= form_with model:activity, local: true do |f| %>
    <% if @activity.errors.any? %>
        <ul>
            <% @activity.errors.full_messages.each do |m|%>
                <li class="danger"><%= m %></li>
            <% end%>
        </ul>
    <% end %>
        <%= f.label :name %>
        <br>
        <%= f.text_field :name %>
        <br>
        <%= f.label :category %>
        <br>
        <%= f.text_field :category, placeholder: "food/movie/restaurant" %>
        <br>
        <% if params[:fooood] || params[:restauuuurant]%>
            <%= f.label :cuisine %>
        <% else[:mooobie] %>
            <%= f.label :genre %>
        <% end %>
        <br>
        <%= f.text_field :genre_cuisine %>
        <br>
  
        <%= f.submit %>
    <% end %>
    <button class="btn btn-dark" id="back_to_user"><%= link_to 'Back', user_path(current_user) %></button>
</div>

