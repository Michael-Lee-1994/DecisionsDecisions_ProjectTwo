<%= form_with(model: address, local: true) do |f| %>
        <% if @user.errors.any? %>
        <ul>
            <% @user.errors.full_messages.each do |m| %>
                <li class="errors"><%= m %></li>
            <% end %>
        </ul>
        <% end %>

    <div>
      <%= f.label :street_name%>
      <%= f.text_field :street_name %>
      <%= f.label :city%>
      <%= f.text_field :city %>
      <%= f.label :state%>
      <%= f.text_field :state %>
      <%= f.label :zipcode%>
      <%= f.text_field :zipcode %>
      <%= f.label :country%>
      <%= f.text_field :country %>
      <%= f.hidden_field :user_id%>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  
    
   